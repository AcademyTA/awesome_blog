<div class='row'>
  <div class='col-md-4 col-md-offset-4 text-center'>
    <h1>All Awesome Bloggers</h1>
  </div>
</div>

<div class='text-center'>
  <%= will_paginate %>

  <% @users.each do |user| %>
    <ul class='article_gravatar'>
      <div class='row'>
        <div class='well col-md-4 col-md-offset-4'>
          <li>
            <%= link_to gravatar_for(user), user_path(user) %>
          </li>
          <li class='article_title'>
            <%= link_to user.username, user_path(user) %>
          </li>
          <li>
            <small>
              <%= pluralize(user.articles.count, 'article') if user.articles %>
            </small>
          </li>
          <% if logged_in? and current_user.admin? %>
            <li>
              <%= link_to 'ADMIN: Delete this user',
                  user_path(user),
                  class: 'text-danger',
                  method: :delete,
                  data: { confirm: 'Are you sure you want to delete the user and all their articles?' } %>
            </li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>

  <%= will_paginate %>
</div>
